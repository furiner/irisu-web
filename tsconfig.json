{
    "compilerOptions": {
        "target": "esnext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
    ]
}